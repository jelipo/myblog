<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="blog.dao.ManagerDao">



    <insert id="insertBlog" useGeneratedKeys="true">
        INSERT INTO word(title,permission,summary,writer,backgroundImage,date,typeId,allowComment,wordTextId)
         VALUE (#{0},#{1},#{2},#{3},#{4},#{5},#{6},#{7},#{8});
    </insert>

    <insert id="insertWordText" useGeneratedKeys="true" >
        INSERT INTO word_text(text,wordTextId)
        VALUE (#{0},#{1});
    </insert>



</mapper>