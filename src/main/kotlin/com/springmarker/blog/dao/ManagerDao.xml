<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springmarker.blog.dao.ManagerDao">


    <insert id="insertBlog" useGeneratedKeys="true">
        INSERT INTO word(title,permission,summary,writer,backgroundImage,date,typeId,allowComment,wordTextId)
         VALUE (#{title},#{permission},#{summary},#{writer},#{backgroundImage},#{date},#{typeId},#{allowComment},#{wordTextId});
    </insert>

    <insert id="insertWordText" useGeneratedKeys="true">
        INSERT INTO word_text(text,wordTextId)
        VALUE (#{text},#{wordTextId});
    </insert>


</mapper>